<%= form_with(url: admin_shared_creators_path, model: creator, data: { action: "turbo:submit-end->modal#close" }) do |form| %>
  <% if creator.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(creator.errors.count, "error") %> prohibited this creator from being saved:</h2>

      <ul>
        <% creator.errors.each do |error| %>
          <li><%= error.full_message %></li>
