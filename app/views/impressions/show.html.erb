<div class="js-impression">
  <%= link_to "戻る", :back %>
  <div class="row m-2" >
    <div class="col-12">
      <%= link_to @article.title, @article.url, target: :_blank %>
    </div>
  </div>

  <%= render partial: 'impression', locals: { impression: @impression, show_detail: true }  %>

  <% if @other_impressions.present? %>
    他の感想
    <% @other_impressions.each do |impression| %>
      <%= render partial: 'impression', locals: { impression: impression, show_detail: false }  %>
    <% end %>
  <% end %>
</div>
