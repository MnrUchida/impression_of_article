<div class="container js-impression" >
  <%= render 'header' %>
  <div class="border" >
    <%= paginate @impressions %>
  </div>
  <div id="impressions">
    <% @impressions.each do |impression| %>
      <div class="card mb-2" id="<%= dom_id impression %>">
        <div class="card-header">
          <div class="text-truncate">
            <%= link_to impression.article_title, my_page_impression_path(impression), class: 'link-dark text-nowrap' %>
          </div>
        </div>
        <div class="card-body">
          <pre><%= impression.summary %></pre>
        </div>
        <div class="card-footer text-sm-center">
          <% impression.tags.each do |tag| %>
            <span class="badge bg-secondary"><%= tag.content %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
